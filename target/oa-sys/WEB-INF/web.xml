<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>com.dan.servlet.admin.EmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/jsp/admin/employee.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SalaryServlet</servlet-name>
        <servlet-class>com.dan.servlet.admin.SalaryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SalaryServlet</servlet-name>
        <url-pattern>/jsp/admin/salary.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RecordServlet</servlet-name>
        <servlet-class>com.dan.servlet.admin.RecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecordServlet</servlet-name>
        <url-pattern>/jsp/admin/record.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DepartServlet</servlet-name>
        <servlet-class>com.dan.servlet.admin.DepartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartServlet</servlet-name>
        <url-pattern>/jsp/admin/depart.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>StatisticsServlet</servlet-name>
        <servlet-class>com.dan.servlet.admin.StatisticsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatisticsServlet</servlet-name>
        <url-pattern>/jsp/admin/statistics.do</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>CharacterEncoding</filter-name>
        <filter-class>com.dan.filter.CharacterEncoding</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.dan.servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <!--HrServlet测试-->
    <servlet>
        <servlet-name>HrSalaryServlet</servlet-name>
        <servlet-class>com.dan.servlet.hr.HrSalaryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HrSalaryServlet</servlet-name>
        <url-pattern>/jsp/hr/salary.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HrStatisticsServlet</servlet-name>
        <servlet-class>com.dan.servlet.hr.HrStatisticsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HrStatisticsServlet</servlet-name>
        <url-pattern>/jsp/hr/statistics.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HrEmployeeServlet</servlet-name>
        <servlet-class>com.dan.servlet.hr.HrEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HrEmployeeServlet</servlet-name>
        <url-pattern>/jsp/hr/employee.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
